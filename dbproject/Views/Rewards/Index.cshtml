@model IEnumerable<dbproject.Reward>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Customer.customer_first_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.points)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Customer.customer_first_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.points)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.reward_id }) |
            @Html.ActionLink("Details", "Details", new { id=item.reward_id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.reward_id })
        </td>
    </tr>
}

</table>
